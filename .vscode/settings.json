{
	"nix.serverSettings": {
		"nixd": {
			"nixpkgs": {
				"expr": "import (builtins.getFlake (builtins.toString ~/.nix)).inputs.nixpkgs { }"
			},
			"options": {
				"nix-os": {
					"expr": "(builtins.getFlake (builtins.toString ~/.nix)).nixosConfigurations.default.options"
				},
				"nix-darwin": {
					"expr": "(builtins.getFlake (builtins.toString ~/.nix)).darwinConfigurations.default.options"
				},
				"home-manager": {
					"expr": "(builtins.getFlake (builtins.toString ~/.nix)).nixosConfigurations.default.options.home-manager.users.type.getSubOptions []"
				}
			}
		}
	},
}
